<script>
  document.getElementById('year').textContent = new Date().getFullYear();

  const themeToggle = document.getElementById('themeToggle');
  const body = document.body;

  if (localStorage.getItem('theme') === 'light') {
    body.classList.add('light-theme');
    themeToggle.textContent = 'ðŸŒž Dark Mode';
  }

  themeToggle.addEventListener('click', () => {
    body.classList.toggle('light-theme');
    const isLight = body.classList.contains('light-theme');
    themeToggle.textContent = isLight ? 'ðŸŒž Dark Mode' : 'ðŸŒ™ Light Mode';
    localStorage.setItem('theme', isLight ? 'light' : 'dark');
  });

  const cases = {
    "project-1": {
      title: "Operational Insights Dashboard",
      subtitle: "Reporting â€¢ Analysis â€¢ Automation",
      body: `
        <p><strong>Summary</strong></p>
        <p>A structured dashboard designed to provide leadership with clear visibility into operational performance.</p>

        <h4>Objectives</h4>
        <ul>
          <li>Centralize key performance indicators.</li>
          <li>Improve reporting consistency.</li>
          <li>Enable dataâ€‘driven decision making.</li>
        </ul>

        <h4>Outcome</h4>
        <p>The dashboard improved visibility, reduced manual reporting time, and supported more informed planning discussions.</p>
      `
    },

    "project-2": {
      title: "Process Standardization Framework",
      subtitle: "Documentation â€¢ Process â€¢ Governance",
      body: `
        <p><strong>Summary</strong></p>
        <p>
          A structured initiative focused on improving consistency across recurring workflows by developing clear,
          accessible documentation and standardized procedures.
        </p>

        <h4>Objectives</h4>
        <ul>
          <li>Reduce ambiguity in crossâ€‘team processes.</li>
          <li>Create a unified reference library for recurring tasks.</li>
          <li>Improve onboarding and knowledge transfer.</li>
        </ul>

        <h4>Outcome</h4>
        <p>
          The framework improved operational clarity, reduced repeated questions, and supported more predictable
          collaboration between teams.
        </p>
      `
    }
  };

  const modal = document.getElementById('modal');
  const modalContent = document.getElementById('modalContent');
  let lastFocusedElement = null;

  function openProjectPopup(projectId) {
    const data = cases[projectId];
    if (!data) return;

    lastFocusedElement = document.activeElement;

    modalContent.innerHTML = `
      <h3>${data.title}</h3>
      <div class="modal-subtitle">${data.subtitle}</div>
      ${data.body}
    `;

    modal.classList.add('open');
    modal.setAttribute('aria-hidden', 'false');

    const closeBtn = modal.querySelector('.close');
    closeBtn.focus();
  }

  function closeModal() {
    modal.classList.remove('open');
    modal.setAttribute('aria-hidden', 'true');
    if (lastFocusedElement && typeof lastFocusedElement.focus === 'function') {
      lastFocusedElement.focus();
    }
  }

  // Attach click handlers to project cards
  document.querySelectorAll('.project').forEach(proj => {
    const id = proj.getAttribute('data-case');
    if (id) {
      proj.addEventListener('click', e => {
        if (e.target.closest('button,a')) return;
        openProjectPopup(id);
      });
    }
  });

  // Close modal on background click
  modal.addEventListener('click', e => {
    if (e.target === modal) closeModal();
  });

  // Close modal on Escape
  document.addEventListener('keydown', e => {
    if (e.key === 'Escape' && modal.classList.contains('open')) {
      closeModal();
    }
  });

  // Contact form handler
  function submitContact(event) {
    event.preventDefault();
    const formMsg = document.getElementById('formMsg');
    formMsg.textContent = "Your message has been submitted.";
  }
</script>
